<UserControl x:Class="GameTools.Client.Wpf.Views.Rarities.RarityEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Rarities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20" Width="320">
            <TextBlock Text="Grade"/>
            <TextBox Text="{Binding RarityEditModel.Grade, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

            <TextBlock Text="Color (#RRGGBB)"/>
            <TextBox Text="{Binding RarityEditModel.ColorCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="Save" IsDefault="True" Command="{Binding SaveRarityCommand}" Margin="0 0 10 0"/>
                <Button Content="Cancel" IsCancel="True" Command="{Binding CancelRarityEditCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
