<UserControl x:Class="GameTools.Client.Wpf.Views.Items.ItemSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Items"
             xmlns:controls="clr-namespace:GameTools.Client.Wpf.Views.Shared"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemSearchViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Label VerticalContentAlignment="Center" Content="Page number : "/>
        <TextBox Text="{Binding SearchPageNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" Width="50" VerticalAlignment="Center"/>
        <Label VerticalContentAlignment="Center" Content="Page size : " Margin="20 0 0 0 "/>
        <TextBox Text="{Binding SearchPageSize, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" Width="50" VerticalAlignment="Center"/>
        <Label VerticalContentAlignment="Center" Content="Name filter : " Margin="20 0 0 0 "/>
        <TextBox Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" Width="100" VerticalAlignment="Center"/>
        <TextBlock VerticalAlignment="Center" Text="RarityId filter : " Margin="20 0 0 0 "/>
        <Button 
            Margin="0 0 10 0" 
            Content="⟲" 
            Background="Transparent" 
            BorderThickness="0" 
            FontSize="15" 
            VerticalAlignment="Center"
            Command="{Binding RarityLookup.LoadCommand}"/>
        <controls:RarityFilterControl 
            VerticalAlignment="Center"
            RarityLookup="{Binding RarityLookup}" 
            SelectedRaityId="{Binding RarityIdFilter, UpdateSourceTrigger=PropertyChanged}"
            ShowErrorMessage="False" 
            ShowRetryIfError="False"
            UseAllOptions="True"/>
        <Button Margin="20 10 0 10" Width="100" Content="Search" Command="{Binding GetItemsCommand}"/>
    </StackPanel>
</UserControl>
