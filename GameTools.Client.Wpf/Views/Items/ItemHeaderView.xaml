<UserControl x:Class="GameTools.Client.Wpf.Views.Items.ItemHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Items"
             xmlns:region="clr-namespace:DotNetHelper.MsDiKit.RegionServices;assembly=DotNetHelper.MsDiKit"
             xmlns:name="clr-namespace:GameTools.Client.Wpf.Common.Names"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemHeaderViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d">
    <StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <ContentControl Margin="10 10 10 0" region:RegionServiceAttached.RegionName="{x:Static name:RegionNames.Item_SearchRegion}"/>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal">
            <Button Margin="10" Width="100" Content="Add Item" Command="{Binding AddItemCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
