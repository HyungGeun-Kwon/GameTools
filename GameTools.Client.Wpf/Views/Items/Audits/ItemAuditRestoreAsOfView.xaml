<UserControl x:Class="GameTools.Client.Wpf.Views.Items.Audits.ItemAuditRestoreAsOfView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:controls="clr-namespace:GameTools.Client.Wpf.Views.Shared"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items.Audits"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemAuditRestoreAsOfViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" >
    <Grid>
        <StackPanel Margin="20" Width="320">
            <TextBlock Text="AsOf (UTC)"/>
            <mah:DateTimePicker PickerVisibility="All" SelectedDateTime="{Binding AsOfUtc}"/>

            <TextBlock Text="Item Id" Margin="0 10 0 0"/>
            <TextBox Text="{Binding ItemId, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

            <TextBlock Text="Note" Margin="0 10 0 0"/>
            <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <CheckBox Content="Dry run" IsChecked="{Binding DryRun}" Margin="0 0 10 0"/>
                <Button Content="Restore" IsDefault="True" Command="{Binding RestoreAsOfItemCommand}" Margin="0 0 10 0"/>
                <Button Content="Cancel" IsCancel="True" Command="{Binding CancelRestoreAsOfItemCommand}"/>
            </StackPanel>
        </StackPanel>
        <controls:BusyOverlay
            Grid.RowSpan="100"
            IsActive="{Binding ItemPageSearchState.BusyState.CommandBusy}"
            ShowCancel="True"
            IsHitTestVisible="True"
            CancelCommand="{Binding RestoreAsOfItemCancelCommand}"/>
    </Grid>
</UserControl>
