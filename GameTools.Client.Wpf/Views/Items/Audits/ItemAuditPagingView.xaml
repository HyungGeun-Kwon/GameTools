<UserControl x:Class="GameTools.Client.Wpf.Views.Items.Audits.ItemAuditPagingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:GameTools.Client.Wpf.Views.Shared"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items.Audits"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemAuditPagingViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d">
    <Grid>
        <controls:PagingBar
            PageState="{Binding PageState}"
            GoFirstPageCommand="{Binding GoFirstPageCommand}"
            GoPreviewPageCommand="{Binding GoPreviewPageCommand}"
            GoNextPageCommand="{Binding GoNextPageCommand}"
            GoLastPageCommand="{Binding GoLastPageCommand}"/>
    </Grid>
</UserControl>