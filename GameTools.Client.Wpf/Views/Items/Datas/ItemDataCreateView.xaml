<UserControl x:Class="GameTools.Client.Wpf.Views.Items.Datas.ItemDataCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:GameTools.Client.Wpf.Views.Shared"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items.Datas"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemDataCreateViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" >
    <StackPanel Margin="20" Width="320">
        <TextBlock Text="Name"/>
        <TextBox Text="{Binding ItemCreateModel.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

        <TextBlock Text="Price" Margin="0 10 0 0"/>
        <TextBox Text="{Binding ItemCreateModel.Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

        <TextBlock Text="Description" Margin="0 10 0 0"/>
        <TextBox Text="{Binding ItemCreateModel.Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
            <TextBlock Text="RarityID : "/>
            <controls:RarityFilterControl
                RarityLookup="{Binding RarityLookup}"
                SelectedRaityId="{Binding ItemCreateModel.RarityId, UpdateSourceTrigger=PropertyChanged}"
                ShowErrorMessage="True"
                ShowRetryIfError="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Save" IsDefault="True" Command="{Binding SaveItemCommand}" Margin="0 0 10 0"/>
            <Button Content="Cancel" IsCancel="True" Command="{Binding CancelItemCreateCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
