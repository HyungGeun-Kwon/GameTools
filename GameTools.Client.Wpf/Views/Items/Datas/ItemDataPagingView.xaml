<UserControl x:Class="GameTools.Client.Wpf.Views.Items.Datas.ItemDataPagingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:GameTools.Client.Wpf.Views.Shared"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items.Datas"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemDataPagingViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" FontSize="17">
    <Grid>
        <controls:PagingBar
            PageState="{Binding PageState}"
            GoFirstPageCommand="{Binding GoFirstPageCommand}"
            GoPreviewPageCommand="{Binding GoPreviewPageCommand}"
            GoNextPageCommand="{Binding GoNextPageCommand}"
            GoLastPageCommand="{Binding GoLastPageCommand}"/>
    </Grid>
</UserControl>
