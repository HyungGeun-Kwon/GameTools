<UserControl x:Class="GameTools.Client.Wpf.Views.Items.ItemCommandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Items"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemCommandViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Margin="0 0 10 0" Width="150" Content="Add Item" Command="{Binding AddItemCommand}"/>
            <Button Margin="0 0 10 0" Width="150" Content="Delete All Result" Command="{Binding DeleteAllResultCommand}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
            <Button Margin="0 0 10 0" Width="150" Content="Export This Page Result" Command="{Binding ExportCsvCommand}"/>
            <Button Margin="0 0 10 0" Width="150" Content="Export Insert Template" Command="{Binding ExportBulkInsertBaseCsvCommand}"/>
            <Button Margin="0 0 10 0" Width="150" Content="Export Update Template" Command="{Binding ExportBulkUpdateBaseCsvCommand}"/>
            <Button Margin="0 0 10 0" Width="150" Content="Export Delete Template" Command="{Binding ExportBulkDeleteBaseCsvCommand}"/>
            <Button Margin="0 0 10 0" Width="150" Content="Bulk Insert" Command="{Binding BulkInsertCommand}"/>
            <Button Margin="0 0 10 0" Width="150" Content="Bulk Update" Command="{Binding BulkUpdateCommand}"/>
            <Button Margin="0 0 10 0" Width="150" Content="Bulk Delete" Command="{Binding BulkDeleteCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
