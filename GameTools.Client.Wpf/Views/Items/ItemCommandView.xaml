<UserControl x:Class="GameTools.Client.Wpf.Views.Items.ItemCommandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Items"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemCommandViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button Margin="0 0 10 0" Width="150" Content="Add Item" Command="{Binding AddItemCommand}"/>
        <Button Margin="0 0 10 0" Width="150" Content="Export Csv" Command="{Binding ExportCsvCommand}"/>
        <Button Margin="0 0 10 0" Width="150" Content="Export Insert Template" Command="{Binding ExportBulkInsertBaseCsvCommand}"/>
        <Button Margin="0 0 10 0" Width="150" Content="Export Update Template" Command="{Binding ExportBulkUpdateBaseCsvCommand}"/>
    </StackPanel>
</UserControl>
