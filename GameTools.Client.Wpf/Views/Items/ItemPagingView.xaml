<UserControl x:Class="GameTools.Client.Wpf.Views.Items.ItemPagingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Items"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.ViewModels.Items"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemPagingViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" FontSize="17">
    <Grid>
        <Border Padding="8" Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1,1,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 현재 범위/총계 표시 -->
                <TextBlock VerticalAlignment="Center">
                    <Run Text="{Binding PageState.StartIndex, Mode=OneWay}" />
                    <Run Text="~" />
                    <Run Text="{Binding PageState.EndIndex, Mode=OneWay}" />
                    <Run Text=" / " />
                    <Run Text="{Binding PageState.TotalCount, Mode=OneWay}" />
                </TextBlock>

                <!-- (우측) Pager 컨트롤 묶음 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 구분선 -->
                    <Separator Width="1" Height="18" Margin="4,0"/>

                    <!-- First / Prev / Next / Last -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                        <Button 
                            Content="⏮"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GoFirstPageCommand}"
                            IsEnabled="{Binding PageState.HasPreview}"/>
                        <Button 
                            Content="◀️"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GotPreviewPageCommand}"
                            IsEnabled="{Binding PageState.HasPreview}"/>
                        <!-- 현재 페이지 / 전체 페이지 -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0">
                            <TextBlock Text="Page" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding PageState.PageNumber}"/>
                            <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                            <TextBlock Text="{Binding PageState.TotalPageNumber}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button 
                            Content="▶"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GetNextPageCommand}" 
                            IsEnabled="{Binding PageState.HasNext}"/>
                        <Button 
                            Content="⏭"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GoLastPageCommand}"
                            IsEnabled="{Binding PageState.HasNext}"/>
                    </StackPanel>

                    <Separator Width="1" Height="18" Margin="4,0"/>
                    <Button Content="Refresh" Command="{Binding RefreshPageCommand}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
