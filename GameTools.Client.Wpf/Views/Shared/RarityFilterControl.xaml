<UserControl x:Class="GameTools.Client.Wpf.Views.Shared.RarityFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Shared"
             xmlns:localConverter="clr-namespace:GameTools.Client.Wpf.Common.Converters"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <localConverter:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
            <localConverter:NotNullOrNotEmptyToVisibilityConverter x:Key="NotNullOrNotEmptyToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <ComboBox 
            Width="100"
            DisplayMemberPath="Grade"
            SelectedValuePath="Id"
            VerticalAlignment="Center"
            SelectedValue="{Binding SelectedRaityId, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
            IsEnabled="{Binding RarityLookup.IsLoading, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InvertBooleanConverter}}">
            <ComboBox.Style>
                <Style TargetType="ComboBox">
                    <Setter Property="ToolTip" Value="{x:Null}"/>
                    <Setter Property="ItemsSource">
                        <Setter.Value>
                            <Binding Path="RarityLookup.Options" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RarityLookup.IsLoading}" Value="True">
                            <Setter Property="ToolTip" Value="Loading rarities..." />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding UseAllOptions, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <Binding Path="RarityLookup.AllOptions" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <StackPanel Orientation="Horizontal">
            <Button 
                Content="⟲"
                Background="Transparent" 
                BorderThickness="0" 
                FontSize="15" 
                Command="{Binding RarityLookup.LoadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowRetryIfError, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                    <Condition Binding="{Binding RarityLookup.Error, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NotNullOrNotEmptyToVisibilityConverter}}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock 
                Foreground="Tomato"
                Text="{Binding RarityLookup.Error, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowErrorMessage, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                    <Condition Binding="{Binding RarityLookup.Error, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NotNullOrNotEmptyToVisibilityConverter}}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
