<UserControl x:Class="GameTools.Client.Wpf.Views.Shared.PagingBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Views.Shared"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
             FontSize="17">
    <Grid>
        <Border Padding="8" Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1,1,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 현재 범위/총계 표시 -->
                <TextBlock VerticalAlignment="Center">
                    <Run Text="{Binding PageState.StartIndex, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    <Run Text="~"/>
                    <Run Text="{Binding PageState.EndIndex, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    <Run Text=" / "/>
                    <Run Text="{Binding PageState.TotalCount, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBlock>

                <!-- (우측) Pager 컨트롤 묶음 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Separator Width="1" Height="18" Margin="4,0"/>

                    <!-- First / Prev / Next / Last -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button 
                            Content="⏮"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GoFirstPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            IsEnabled="{Binding PageState.HasPreview, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                        <Button 
                            Content="◀️"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GotPreviewPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            IsEnabled="{Binding PageState.HasPreview, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                        <!-- 현재 페이지 / 전체 페이지 -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="6,0">
                            <TextBlock Text="Page" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding PageState.PageNumber, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                            <TextBlock Text="{Binding PageState.TotalPageNumber, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </StackPanel>

                        <Button 
                            Content="▶"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GetNextPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            IsEnabled="{Binding PageState.HasNext, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                        <Button 
                            Content="⏭"
                            BorderThickness="0"
                            Background="Transparent"
                            Command="{Binding GoLastPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            IsEnabled="{Binding PageState.HasNext, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>

                    <Separator Width="1" Height="18" Margin="4,0"/>
                    <Button Content="Refresh"
                            Command="{Binding RefreshPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
