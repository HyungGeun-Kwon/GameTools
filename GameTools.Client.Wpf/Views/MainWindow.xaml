<Window x:Class="GameTools.Client.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTools.Client.Wpf.Views"
        xmlns:region="clr-namespace:DotNetHelper.MsDiKit.RegionServices;assembly=DotNetHelper.MsDiKit"
        xmlns:names="clr-namespace:GameTools.Client.Wpf.Common.Names;assembly=GameTools.Client.Wpf"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MsSql Table Editor" Height="800" Width="1280">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <!-- Main Content Area -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ContentControl region:RegionServiceAttached.RegionName="{x:Static names:RegionNames.Main_LeftNavigationRegion}"/>

        <ContentControl Grid.Column="1" region:RegionServiceAttached.RegionName="{x:Static names:RegionNames.Main_MainContentRegion}"/>
    </Grid>
</Window>
