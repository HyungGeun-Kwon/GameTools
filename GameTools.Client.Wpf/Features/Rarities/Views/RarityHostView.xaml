<UserControl x:Class="GameTools.Client.Wpf.Features.Rarities.Views.RarityHostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTools.Client.Wpf.Features.Rarities.Views"
             xmlns:region="clr-namespace:DotNetHelper.MsDiKit.RegionServices;assembly=DotNetHelper.MsDiKit"
             xmlns:name="clr-namespace:GameTools.Client.Wpf.Shared.Names"
             xmlns:overlayControls="clr-namespace:GameTools.Client.Wpf.Shared.Components.Overlays"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.Features.Rarities.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:RarityHostViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl region:RegionServiceAttached.RegionName="{x:Static name:RegionNames.Rarity_SearchRegion}"/>
        <ContentControl Grid.Row="2" region:RegionServiceAttached.RegionName="{x:Static name:RegionNames.Rarity_ResultRegion}"/>

        <overlayControls:BusyOverlay
            Grid.RowSpan="100"
            IsActive="{Binding RaritySearchState.BusyState.QueryBusy}"
            ShowCancel="True"
            IsHitTestVisible="True"
            CancelCommand="{Binding QueryCancelCommand}"/>

        <overlayControls:BusyOverlay
            Grid.RowSpan="100"
            IsActive="{Binding RaritySearchState.BusyState.CommandBusy}"
            IsHitTestVisible="True"
            CancelCommand="{Binding CommandCancelCommand}"/>
    </Grid>
</UserControl>
