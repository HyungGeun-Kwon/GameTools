<UserControl x:Class="GameTools.Client.Wpf.Features.Items.Data.Views.ItemDataHostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:region="clr-namespace:DotNetHelper.MsDiKit.RegionServices;assembly=DotNetHelper.MsDiKit"
             xmlns:name="clr-namespace:GameTools.Client.Wpf.Shared.Names"
             xmlns:overlayControls="clr-namespace:GameTools.Client.Wpf.Shared.Components.Overlays"
             xmlns:viewModels="clr-namespace:GameTools.Client.Wpf.Features.Items.Data.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemDataHostViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <ContentControl region:RegionServiceAttached.RegionName="{x:Static name:RegionNames.Item_Data_HeaderRegion}"/>
        </ScrollViewer>
        <ContentControl Grid.Row="1" Margin="0 10 0 0" region:RegionServiceAttached.RegionName="{x:Static name:RegionNames.Item_Data_ResultRegion}"/>
        <ContentControl Grid.Row="2" region:RegionServiceAttached.RegionName="{x:Static name:RegionNames.Item_Data_PagingRegion}"/>

        <overlayControls:BusyOverlay
            Grid.RowSpan="100"
            IsActive="{Binding ItemPageSearchState.BusyState.QueryBusy}"
            ShowCancel="True"
            IsHitTestVisible="True"
            CancelCommand="{Binding QueryCancelCommand}"/>

        <overlayControls:BusyOverlay
            Grid.RowSpan="100"
            IsActive="{Binding ItemPageSearchState.BusyState.CommandBusy}"
            ShowCancel="True"
            IsHitTestVisible="True"
            CancelCommand="{Binding CommandCancelCommand}"/>
    </Grid>
</UserControl>
