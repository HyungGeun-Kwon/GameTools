<UserControl x:Class="GameTools.Client.Wpf.Shared.Components.Lookups.Rarities.RarityFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localConverter="clr-namespace:GameTools.Client.Wpf.Shared.UI.Converters"
             mc:Ignorable="d">
    <StackPanel>
        <ComboBox 
            Width="130"
            DisplayMemberPath="Grade"
            SelectedValuePath="Id"
            VerticalAlignment="Center"
            SelectedValue="{Binding SelectedRaityId, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
            IsEnabled="{Binding RarityLookup.IsLoading, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={localConverter:InvertBooleanConverter}}">
            <ComboBox.Style>
                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                    <Setter Property="ToolTip" Value="{x:Null}"/>
                    <Setter Property="ItemsSource">
                        <Setter.Value>
                            <Binding Path="RarityLookup.Options" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RarityLookup.IsLoading}" Value="True">
                            <Setter Property="ToolTip" Value="Loading rarities..." />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding UseAllOptions, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <Binding Path="RarityLookup.AllOptions" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Style>
        </ComboBox>
        <StackPanel Orientation="Horizontal">
            <Button 
                Content="⟲"
                Background="Transparent" 
                BorderThickness="0" 
                FontSize="15" 
                Command="{Binding RarityLookup.LoadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowRetryIfError, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                    <Condition Binding="{Binding RarityLookup.Error, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={localConverter:NotNullOrNotEmptyToVisibilityConverter}}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
